<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.catasoft.autoclub.ui.main.addmeet.AddMeetViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.addmeet.AddMeetLocationFragment">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pickLocationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alege locatia"
            android:drawableStart="@drawable/outline_place_24"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pickLocationBtn">

            <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="300dp"
                bind:imageUri="@{viewModel.liveLocationPhoto}"
                android:layout_marginBottom="8dp"
                tools:src="@tools:sample/avatars"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textSize="20sp"
                android:text="@{viewModel.liveLocationName}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textSize="20sp"
                android:text="@{String.valueOf(viewModel.liveLocationLat) + ' ' + String.valueOf(viewModel.liveLocationLong)}" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>